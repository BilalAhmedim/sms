<?import javafx.scene.control.Button?>
<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.GUI.Controller.ResultController">
  <top>
    <fx:include source="Menu.fxml"/>
  </top>
  <center>
    <GridPane alignment="CENTER">
      <VBox GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="4">
        <Label text="Fees Submission" styleClass="Header__Label"/>
        <Label text="Enrolment No:" styleClass="Label"/>
        <TextField promptText="Enter Student Enrolment No" styleClass="input"/>
        <Button text="Search" styleClass="Button" onAction="#changeScene"/>
      </VBox>
    </GridPane>
  </center>
</BorderPane>